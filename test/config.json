{
  "framework": "mocha",
  "src_files": [
    "lib/**/*.coffee",
    "test/**/*.coffee"
  ],
  "launch_in_dev": ["Node"],
  "launch_in_ci":  ["Node"],
  "launchers": {
    "Node": {
      "command": "./node_modules/.bin/mocha --recursive -u mocha-given --colors --compilers coffee:coffee-script/register test/**/*-test.coffee"
    }
  }
}
